# Environment Configuration for Dynamic Pricing Pipeline
# Copy this to .env file and update with your Azure values

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_ADLS_CONTAINER=pricing-data

# Azure Key Vault Configuration
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/

# Azure Machine Learning Configuration
AZURE_ML_SUBSCRIPTION_ID=your-subscription-id
AZURE_ML_RESOURCE_GROUP=your-resource-group
AZURE_ML_WORKSPACE_NAME=your-workspace-name

# Databricks Configuration
DATABRICKS_CATALOG=pricing_analytics
DATABRICKS_SCHEMA=dynamic_pricing
DATABRICKS_WORKSPACE_URL=https://your-workspace.azuredatabricks.net
DATABRICKS_ACCESS_TOKEN=your-databricks-token

# Azure Monitor Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key

# Feature Flags (set to true/false)
ENABLE_AZURE=true
ENABLE_DATABRICKS=true
ENABLE_MLFLOW=true
ENABLE_MONITORING=true
ENABLE_KEYVAULT=true
ENABLE_ADLS=true
ENABLE_AML=true

# ML Configuration
MODEL_EXPERIMENT_NAME=/Shared/dynamic_pricing_experiment
MODEL_NAME=dynamic_pricing_model
TARGET_COLUMN=selling_price

# Performance Configuration
FEATURE_ELASTICITY_WINDOW=7
FEATURE_TREND_WINDOW=30
ENABLE_SEASONALITY_FEATURES=true

# API Configuration
API_INSTANCE_TYPE=Standard_DS3_v2
API_INSTANCE_COUNT=1
API_MAX_CONCURRENT_REQUESTS=10
API_TIMEOUT_SECONDS=30
